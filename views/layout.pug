doctype html
html(lang='en')
  head
    title Bootstrap Example
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js')
  body
   nav.navbar.navbar-default
    .container-fluid
      .navbar-header
       a.navbar-brand(href='#') HappyLife
      ul.nav.navbar-nav
       if (session.token) 
         li.active
          a(href=`${process.env.CRUD_BASE_URL}`) Add User
         li
          a(href=`${process.env.CRUD_BASE_URL+'/list'}`) Users List 
         li
          a(href=`${process.env.LOGOUT}`) Logout  
       else
         li
          a(href=`${process.env.LOGIN}`) Login
         li
          a(href=`${process.env.REGISTER}`) Register               
